doctype 5
html
  head
    title Melt.ee
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge,chrome=1')
    script(src='/js/jquery-1.8.2.min.js')
    script(src='/js/underscore-min.js')
    script(src='/js/backbone-min.js')
    script(src='/topics.js')
    script(src='/js/loader.js')
    link(rel='stylesheet', href='/css/main.css')
    meta(name="viewport",content="width=device-width, initial-scale=1, user-scalable=no")
  body
    div(class='top')
      h1 
        span(class='melt_before') http:// 
        span(class='melt_left') melt
        span(class='melt_right') .ee
      h2 A place to melt new people
    div(class='content')
      table(id='main_table')
        tr
          td
            a(href= url)
              img(src= img_src)
          td 
            div(id='name')
              = name
            br(clear='both')
            a(id='logout',href='/logout',class='grey_button') Log Out            
      table(class="full")
        tr
          th I love to talk about
        tr
          td 
            input(type='text',id='topic1')
        tr
          th I also love to talk about
        tr        
          td 
            input(type='text',id='topic2')
        tr          
          th And about...
        tr  
          td 
            input(type='text',id='topic3')
        tr
          td
        tr  
          td
            div(id='cancel_topics',class='grey_button') Cancel
            div(id='save_topics',class='black_button') Save
            div(id='edit_topics',class='edit_button') Edit
    script(type='text/template',id='test_template')
      table
        tr
          td testing...

      