      tr
        td
          input#topic3.topic_input(type='text')
      tr
        td
      tr
        td.actions
          div#cancel_topics.btn.btn-inverse Cancel
          div#save_topics.btn.btn-primary.save_topics Save
          div#edit_topics.btn.btn-primary Edit 
  .hline
