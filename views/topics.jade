extend layout_desktop

block css
  link(rel='stylesheet', href='/css/desktop.css')

block content
  .clearfix.middle.top
    .td
      a(href="/")
        img(src="img/meltee-logo.png")
    .td.right
      a#logout.btn.btn-inverse(href='/logout') Log Out
  .hline
  .clearfix.middle
    table.full
      tr
        th I love to talk about
      tr
        td
          input#topic1.topic_input(type='text')
      tr
        th I also love to talk about
      tr
        td
          input#topic2.topic_input(type='text')
      tr
