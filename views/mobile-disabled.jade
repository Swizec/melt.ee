
extend layout

block css
  link(rel='stylesheet', href='/css/mobile.css')

block scripts
  script(type='text/javascript')
    window.addEventListener("load",function() {
    // Set a timeout...
    setTimeout(function(){
     // Hide the address bar!
      window.scrollTo(0, 1);
     }, 0);
    });

block content
  div.row
    div.span4.logo
       h1 Melt.ee
       hr

  div#view.row.disabled_app
    div.span4
      p.lead Hi, #{name}!

      p Thanks for trying the Melt.ee app. We will be launching&nbsp;
       strong live on Saturday Nov 10th
       &nbsp;at TedXCelje in Slovenia.

      p
       a(href="http://tedxcelje.com/", alt="TEDxCelje logo")
        img(src="/img/tedxcelje_logo.png")
